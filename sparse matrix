#include <stdio.h>

void display(int *A, int m, int n)
{
    printf("\n");
    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
            printf("\t%d", *A++);
        printf("\n");
    }
    printf("\n");
}

int K[100][3];
int K1[100][3];

void convert(int *A, int m, int n)
{
    K[0][0] = m;
    K[0][1] = n;
    int T = 1;
    for (int i = 0; i < m; i++)
        for (int j = 0; j < n; j++)
        {
            if (*(A) != 0)
            {
                K[T][0] = i;
                K[T][1] = j;
                K[T++][2] = *A;
            }
            *(A++);
        }
    K[0][2] = T - 1;

    display(K[0], T, 3);
}

void _convert(int *A, int m, int n)
{
    K1[0][0] = m;
    K1[0][1] = n;
    int T = 1;
    for (int i = 0; i < m; i++)
        for (int j = 0; j < n; j++)
        {
            if (*(A) != 0)
            {
                K1[T][0] = i;
                K1[T][1] = j;
                K1[T++][2] = *A;
            }
            *(A++);
        }
    K1[0][2] = T - 1;

    display(K1[0], T, 3);
}

void fast_transpose()
{
    int Result[100][3], total[K[0][1]], index[(K[0][1]) + 1];
    for (int i = 0; i < K[0][1]; i++)
        total[i] = 0;
    for (int i = 1; i <= K[0][2]; i++)
        total[K[i][1]]++;
    index[0] = 1;
    for (int i = 1; i <= K[0][1]; i++)
        index[i] = index[i - 1] + total[i - 1];
    Result[0][0] = K[0][1];
    Result[0][1] = K[0][0];
    Result[0][2] = K[0][2];
    for (int i = 1; i <= K[0][2]; i++)
    {
        int loc = index[K[i][1]];
        Result[loc][0] = K[i][1];
        Result[loc][1] = K[i][0];
        Result[loc][2] = K[i][2];
        index[K[i][1]]++;
    }
    for (int i = 0; i <= Result[0][2]; i++)
    {
        for (int j = 0; j < 3; j++)
        {
            printf("\t%d", Result[i][j]);
        }
        printf("\n");
    }
}

void accept(int *A, int m, int n)
{
    printf("\n");
    for (int i = 0; i < m; i++)
        for (int j = 0; j < n; j++)
        {
            printf("A[%d][%d] = ", i, j);
            scanf("%d", &*(A++));
        }
    printf("\n");
}

void add(int *A, int m, int n)
{
    int S1[m][n], add[100][3];
    int c1 = 1, c2 = 1, cm = 0;
    accept(S1[0], m, n);
    _convert(S1[0], m, n);
    add[0][0] = m;
    add[0][1] = n;
    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            int flag = 0;
            if (K[c1][0] == i && K[c1][1] == j)
            {
                cm++;
                add[cm][0] = i;
                add[cm][1] = j;
                add[cm][2] = K[c1][2];
                c1++;
                flag = 1;
            }
            if (K1[c2][0] == i && K1[c2][1] == j)
            {
                if (!flag)
                {
                    cm++;
                    add[cm][2] = 0;
                }
                add[cm][0] = i;
                add[cm][1] = j;
                add[cm][2] += K1[c2][2];
                c2++;
            }
        }
    }
    add[0][2] = cm;
    display(add[0], cm +1 , 3);
}

int main()
{
    int m, n;
    printf("Enter no. of rows and columns : ");
    scanf("%d%d", &m, &n);
    int S[m][n];
    while (1)
    {
        int choice = 0;
        printf("1. Accept\n2. Display\n3. Convert\n4. FAST-TRANPOSE\n5. Add\n6. Exit\n");
        scanf("%d", &choice);
        switch (choice)
        {
        case 1:
            accept(S[0], m, n);
            break;
        case 2:
            display(S[0], m, n);
            break;
        case 3:
            convert(S[0], m, n);
            break;
        case 4:
            fast_transpose();
            break;
        case 5:
            add(S[0], m, n);
        case 6:
            return 0;
            break;
        default:
            printf("Invalid choice");
        }
    }
    return 0;
}
